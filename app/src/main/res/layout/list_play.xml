<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    tools:context="com.exampl.varvara.malifaux.Event">

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/surname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:layout_toRightOf="@+id/name1"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/points1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_below="@+id/name1"
        android:layout_alignLeft="@+id/name1"/>

    <TextView
        android:id="@+id/pointsFoVictory1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/pointsSum1"
        android:layout_alignTop="@+id/points1"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:id="@+id/difference1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/pointsFoVictorySum1"
        android:layout_alignTop="@+id/points1"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_toRightOf="@+id/points1"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_toRightOf="@+id/pointsFoVictory1"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_toRightOf="@+id/difference1"
        android:layout_alignTop="@+id/points1"/>


    <TextView
        android:id="@+id/pointsSum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/textView1"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/pointsFoVictorySum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/differenceSum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignTop="@+id/points1"/>



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vs"
        android:layout_centerInParent="true"/>




    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/surname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name2"
        android:text="Surname"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/points2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_below="@+id/name2"
        android:layout_alignLeft="@+id/name2"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/pointsFoVictory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/pointsSum2"
        android:layout_alignTop="@+id/points1"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:id="@+id/difference2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/pointsFoVictorySum2"
        android:layout_alignTop="@+id/points1"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_toRightOf="@+id/points2"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_toRightOf="@+id/pointsFoVictory2"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_toRightOf="@+id/difference2"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/pointsSum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/pointsFoVictorySum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/textView5"
        android:layout_alignTop="@+id/points1"/>

    <TextView
        android:id="@+id/differenceSum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignTop="@+id/points1"/>
</RelativeLayout>